<UserControl x:Class="WiiTUIO.LanguageSelectorUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:loc="clr-namespace:WiiTUIO"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <StackPanel Margin="20">
        <TextBlock Text="{loc:Localization ChangeLanguage_Title}" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
        <TextBlock Text="{loc:Localization Restart_Message}" TextWrapping="Wrap" Margin="0,0,0,15"/>
        <ComboBox x:Name="LanguageComboBox" Margin="0,5,0,20" FontSize="14"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="OkButton" Content="{loc:Localization ChangeLanguage_Accept}" Width="150" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="{loc:Localization ChangeLanguage_Cancel}" Width="100" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</UserControl>