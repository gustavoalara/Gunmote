<UserControl x:Class="WiiTUIO.Provider.WiiPointerProviderSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="250"
        xmlns:loc="clr-namespace:WiiTUIO"
        xmlns:provider="clr-namespace:WiiTUIO.Provider"
        >
    <Canvas Height="250" Width="419">
        <!-- Controles existentes para la configuración del modo del sensor -->
        <Label Content="{loc:Localization AimConfig}" FontFamily="Segoe UI Light" FontSize="18" Canvas.Left="73" Canvas.Top="10"/>
        <Label Content="{loc:Localization SensorMode}" FontFamily="Segoe UI Semilight" HorizontalAlignment="Right" Canvas.Left="150" Canvas.Top="53" VerticalAlignment="Center" />
        <ComboBox Name="SBPositionComboBox" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="110" SelectionChanged="SBPositionComboBox_SelectionChanged" FontFamily="Segoe UI Semilight" Canvas.Left="233" Canvas.Top="53">
            <ComboBoxItem Name="cbiCenter">
                <Run Text="{loc:Localization 2IRCentered}"/>
            </ComboBoxItem>
            <ComboBoxItem Name="cbiTop">
                <Run Text="{loc:Localization 2IRTop}"/>
            </ComboBoxItem>
            <ComboBoxItem Name="cbiBottom">
                <Run Text="{loc:Localization 2IRBottom}"/>
            </ComboBoxItem>
            <ComboBoxItem Name="cbiSquare">
                <Run Text="{loc:Localization 4IRSquare}"/>
            </ComboBoxItem>
            <ComboBoxItem Name="cbiDiamond">
                <Run Text="{loc:Localization 4IRDiamond}"/>
            </ComboBoxItem>
        </ComboBox>

        <!-- NUEVOS CONTROLES PARA GESTIÓN DE PERFILES -->
        <Label Content="{loc:Localization Profile_CalibrationProfiles}" FontFamily="Segoe UI Light" FontSize="18" Canvas.Left="73" Canvas.Top="100"/>

        <Label Content="{loc:Localization Profile_ActiveProfile}" FontFamily="Segoe UI Semilight" HorizontalAlignment="Right" Canvas.Left="100" Canvas.Top="140" VerticalAlignment="Center" />
        <ComboBox Name="ProfileComboBox" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="150"
                  ItemsSource="{Binding Source={x:Static provider:CalibrationSettings.AvailableProfiles}}"
                  SelectedItem="{Binding Source={x:Static provider:CalibrationSettings.ActiveProfileName}, Path=., Mode=TwoWay}"
                  SelectionChanged="ProfileComboBox_SelectionChanged"
                  FontFamily="Segoe UI Semilight" Canvas.Left="233" Canvas.Top="140">
        </ComboBox>

        <Label Content="{loc:Localization Profile_NewProfile}" FontFamily="Segoe UI Semilight" HorizontalAlignment="Right" Canvas.Left="100" Canvas.Top="170" VerticalAlignment="Center" />
        <TextBox Name="NewProfileNameTextBox" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="150"
                 Text="{Binding Path=NewProfileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 FontFamily="Segoe UI Semilight" Canvas.Left="233" Canvas.Top="170"/>

        <Button Content="{loc:Localization Profile_CreateButton}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="24"
                Click="CreateProfile_Click" Canvas.Left="233" Canvas.Top="200" FontFamily="Segoe UI Semilight"/>
        <Button Content="{loc:Localization Profile_DeleteButton}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="24"
                Click="DeleteProfile_Click" Canvas.Left="123" Canvas.Top="200" FontFamily="Segoe UI Semilight"/>
    </Canvas>
</UserControl>
