<Window x:Class="DriverInstall.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:DriverInstall"  Title="{loc:Localization DriverInstallTitle}" Height="350" Width="525" ResizeMode="NoResize">
    <Grid>
        <Label Content="{loc:Localization DriverInstallTitle}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="24" FontFamily="Segoe UI Light"/>
        <ScrollViewer HorizontalAlignment="Left" Height="174" VerticalAlignment="Top" Width="497" Margin="10,135,0,0">
            <TextBox Name="console" TextWrapping="Wrap" Text=""/>
        </ScrollViewer>
        <Button Content="{loc:Localization InstallButton}" HorizontalAlignment="Left" Margin="10,57,0,0" VerticalAlignment="Top" Width="243" Click="btnInstall_Click" Height="53" Background="#FFECECEC" BorderBrush="#FFDADADA" FontFamily="Segoe UI Semilight" FontSize="20"/>
        <Button Content="{loc:Localization UninstallButton}" HorizontalAlignment="Left" Margin="258,57,0,0" VerticalAlignment="Top" Width="249" Click="btnUninstall_Click" Height="53" Background="#FFECECEC" BorderBrush="#FFDADADA" FontFamily="Segoe UI Semilight" FontSize="20"/>
    </Grid>
</Window>